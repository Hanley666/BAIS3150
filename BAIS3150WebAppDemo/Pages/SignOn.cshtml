@page
@model BAIS3150WebAppDemo.Pages.SignOnModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignOn</title>
    <script type="text/javascript">
        function SignOnValidation() {
            var userId = document.getElementById("UserId").value;
            var password = document.getElementById("Password").value;
            var formValid = true;

            //User Id Validation
            if (userId.trim() == "") {
                alert('User Id is Required');
                formValid = false;
            }
            
            if (!/^[A-Za-z]{4}\d{4}$/.test(userId)) {
                alert('User Id must contain 4 letters followed by 4 digits.');
                formValid = false;
            }
            if (userId.length < 8 || userId.length > 8) {
                alert('User Id Must Contain 8 Characters');
                formValid = false;
            }
            
            if (password.trim() == "") {
                alert('Password is Required');
                formValid = false;
            }
           
            if (password.length < 6) {
                alert('Password must be atleast 6 Characters long');
                formValid = false;
            }
            
            return formValid;
        }
    </script>
</head>
<body>
    <form name="SignOnForm" id="SignOnForm" method="post" onsubmit="return true //SignOnValidation()">
        <table>
            <tr>
                <td><h1>Sign On</h1></td>
            </tr>
            <tr>
                <td><label for="UserId">User Id</label></td>
                <td>
                    <input type="text" name="UserId" id="UserId" />
                </td>
            </tr>
            <tr>
                <td><label for="Password">Password</label></td>
                <td>
                    <input type="password" name="Password" id="Password" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" name="SubmitButton" id="SubmitButton" value="Submit" />
                </td>
            </tr>
            @Html.ValidationSummary();
        </table>
    </form>
</body>
</html>
